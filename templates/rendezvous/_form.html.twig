<div class="container" style="margin-top: 20px">
{{ form_start(form) }}
<div class="form-group" style="width: 300px">{{ form_row(form.patient, {'attr': {'class' : 'form-control','placeholder':'Nom du patient.....'} } ) }}</div>
<div class="form-group" style="width: 300px">{{ form_row(form.medecin, {'attr': {'class' : 'form-control','placeholder':'Nom du medecin.....'} } ) }}</div>
<div class="form-group" style="width: 300px">{{ form_row(form.dateReservation, {'attr': {'class' : 'form-control','placeholder':'Date reservation.....'} } ) }}</div>
<div class="form-group" style="width: 300px">{{ form_row(form.dateRdv, {'attr': {'class' : 'form-control','placeholder':'Date du rendezvous.....'} } ) }}</div>
<button class="btn btn-primary btn-sm" style="margin-top: 20px">{{ button_label|default('Savegarder') }}</button>
{{ form_end(form) }}
</div>