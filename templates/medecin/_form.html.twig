<div class="container" style="margin-top: 20px">
{{ form_start(form) }}
<div class="form-group" style="width: 300px">{{ form_row(form.nom, {'attr': {'class' : 'form-control','placeholder':'Nom du medecin.....'} } ) }}</div>
<div class="form-group" style="width: 300px">{{ form_row(form.specialite, {'attr': {'class' : 'form-control','placeholder':'specialite du medecin.....'} } ) }}</div>
<div class="form-group" style="width: 300px">{{ form_row(form.contact, {'attr': {'class' : 'form-control','placeholder':'Numero telephone.....'} } ) }}</div>
<div class="form-group" style="width: 300px">{{ form_row(form.email, {'attr': {'class' : 'form-control','placeholder':'Adresse Email.....'} } ) }}</div>
<div class="form-group" style="width: 300px">{{ form_row(form.password, {'attr': {'class' : 'form-control','placeholder':'Mot de passe !'} } ) }}</div>
<div class="form-group" style="width: 300px">{{ form_row(form.confirme_password, {'label':'Confirme', 'attr': {'class' : 'form-control','placeholder':'Répétez votre mot de passe'} } ) }}</div>
<button class="btn btn-primary btn-sm">{{ button_label|default('Savegarder') }}</button>
{{ form_end(form) }}
</div>