<form method="post" action="{{ path('patient_delete', {'idpatient': patient.idpatient}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ patient.idpatient) }}">
    <button class="btn">Delete</button>
</form>
