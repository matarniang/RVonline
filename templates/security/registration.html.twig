{% extends 'base.html.twig' %}
{% block title %} Inscription {% endblock %}
{% block body %}

    <div class="container" style="margin-top: 40px">
        <img src="{{ asset('images/image2.jpg') }}" alt="Responsive image" class="img-thumbnail media-object">
        {{ form_start(form) }}
        <div class="form-group" style="width: 320px;margin-top: 20px">{{ form_row(form.nom, {'attr': {'class' : 'form-control','placeholder':'Nom d\'administrateur.....'} } ) }}</div>
        <div class="form-group" style="width: 320px">{{ form_row(form.email, {'attr': {'class' : 'form-control','placeholder':'Adresse Email.....'} } ) }}</div>
        <div class="form-group" style="width: 320px">{{ form_row(form.password, {'attr': {'class' : 'form-control','placeholder':'Mot de passe !'} } ) }}</div>
        <a href="{{ path('medecin_index') }}"> <button type="submit" class="btn btn-success" style="margin-top: 10px">Se Connecter</button></a>
        {{ form_end(form) }}
    </div>
{% endblock %}