{% extends 'base.html.twig' %}

{% block title %}Horaire index{% endblock %}

{% block body %}
    <div class="container">

    <table class="table" style="width: 600px ;margin-top: 50px">
        <thead>
            <tr>

                <th>Time</th>
                <th>Nom du Medecin</th>
                <th style="margin-left: 100px">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for horaire in horaires %}
            <tr>

                <td>{{ horaire.time }}</td>
                <td>{{ horaire.medecin.nom }}</td>
                <td>
                    {{ include('horaire/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('horaire_new') }}"><button type="button" class="btn btn-dark btn-sm">Create new</button></a>
    </div>
{% endblock %}
