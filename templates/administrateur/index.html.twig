{% extends 'base.html.twig' %}

{% block title %}Administrateur index{% endblock %}

{% block body %}
    <h1>Administrateur index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Email</th>
                <th>Password</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for administrateur in administrateurs %}
            <tr>

                <td>{{ administrateur.nom }}</td>
                <td>{{ administrateur.email }}</td>
                <td>{{ administrateur.password }}</td>
                <td>
                    <a href="{{ path('administrateur_show', {'idadministrateur': administrateur.idadministrateur}) }}"><button type="submit" class="btn btn-primary">show</button></a>
                    <a href="{{ path('administrateur_edit', {'idadministrateur': administrateur.idadministrateur}) }}"><button type="submit" class="btn btn-secondary">edit</button></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('administrateur_new') }}"><button type="button" class="btn btn-warning btn-sm">Create new</button></a>
{% endblock %}
